<p id="notice"><%= notice %></p>

<h1>Celestial Bodies</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Volume</th>
      <th>Mass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @celestial_bodies.each do |celestial_body| %>
      <tr>
        <td><%= celestial_body.type %></td>
        <td><%= celestial_body.volume %></td>
        <td><%= celestial_body.mass %></td>
        <td><%= link_to 'Show', celestial_body %></td>
        <td><%= link_to 'Edit', edit_celestial_body_path(celestial_body) %></td>
        <td><%= link_to 'Destroy', celestial_body, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

