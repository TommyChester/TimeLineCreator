
<%= form_with scope: :thing, url: things_path, local: true do |form| %>  
    <p>
      <%= form.label :what_is_it %><br>
      <%= form.text_field :what_is_it %>
    </p>
   
    <p>
      <%= form.label :about %><br>
      <%= form.text_area :about %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>